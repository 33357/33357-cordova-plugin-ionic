{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "noImplicitAny": true,
    "declaration": true,
    "importHelpers": false,
    "module": "commonjs",
    "outDir": "dist",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "strict": true,
    "target": "es5",
    "types": [
      "cordova",
      "cordova-plugin-file",
      "cordova-plugin-file-transfer"
    ],
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": ["www"]
}
