<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
    id="ionic-cordova-common"
    version="1.0.0">
    <name>IonicCordovaCommon</name>
    <description>Common Cordova functionality for Ionic apps</description>
    <license>MIT</license>
    <keywords>Ionic,native,html5,hybrid, cordova</keywords>
    <repo>https://github.com/driftyco/ionic-cordova-common.git</repo>
    <issue>https://github.com/driftyco/ionic-cordova-common/issues</issue>

    <js-module src="www/common.js">
        <runs/>
        <clobbers target="IonicCordovaCommon" />
    </js-module>

    <!-- ios -->
    <platform name="ios">
        <config-file target="config.xml" parent="/*">
            <feature name="IonicCordovaCommon">
                <param name="ios-package" value="IonicCordovaCommon" onload="true" />
            </feature>
        </config-file>

        <source-file src="src/ios/IonicCordovaCommon.swift" />
    </platform>

    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="IonicCordovaCommon">
                <param name="android-package" value="com.ionicframework.common.IonicCordovaCommon" onload="true" />
            </feature>
        </config-file>
        <!--<edit-config file="AndroidManifest.xml" target="/manifest/application/activity" mode="overwrite">
          <activity android:name="IonicActivity"></activity>
        </edit-config> -->
        <source-file src="src/android/IonicCordovaCommon.java" target-dir="src/com/ionicframework/common" />
        <!--<source-file src="src/android/IonicActivity.java" target-dir="src/$PACKAGE_NAME" />-->
    </platform>

    <dependency id="cordova-plugin-add-swift-support" version="^1.6.0"/>
</plugin>
